@model List<GestorTareas.Models.Tarea>

    @{
    ViewData["Title"] = "Mis Tareas";
    }

    <div class="text-center">
        <h1 class="display-4">Mis Tareas</h1>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <div class="mb-3 text-end">
                <a asp-action="Crear" class="btn btn-primary">
                    + Nueva Tarea
                </a>
            </div>
            <table class="table table-bordered table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Tarea</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count == 0)
                {
                    <tr>
                        <td colspan="4" class="text-center">No hay tareas pendientes.</td>
                    </tr>
                }
                else
                {
                    /* --- AQUÍ ESTABA EL ERROR: FALTABA EL FOREACH --- */
                    foreach (var tarea in Model)
                    {
                    <tr>
                        <td>@tarea.Id</td>
                        <td>@tarea.Titulo</td>
                        <td>
                            @if(tarea.EstaCompletada)
                                {
                            <span class="badge bg-success">Completada</span>
                                }
                                else
                                {
                            <span class="badge bg-warning text-dark">Pendiente</span>
                                }
                        </td>
                        <td>
                            <span class="text-muted">Próximamente</span>
                        </td>
                    </tr>
                    }
                }
                </tbody>
            </table>
        </div>
    </div>
