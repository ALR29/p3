@model List<GestorTareas.Models.Tarea>

    @{ ViewData["Title"] = "Mis Tareas"; }

    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="text-primary"><i class="bi bi-list-check"></i> Mis Tareas</h2>
            <a asp-action="Crear" class="btn btn-primary shadow-sm"><i class="bi bi-plus-lg"></i> Nueva Tarea</a>
        </div>

        <div class="card mb-4 bg-light border-0">
            <div class="card-body py-2">
                <form method="get" asp-action="Index" class="row g-2 align-items-center">
                    <div class="col-md-4">
                        <input type="text" name="buscar" class="form-control" placeholder="🔍 Buscar por título..." value="@ViewBag.Buscar">
                    </div>
                    <div class="col-md-3">
                        <select name="filtroPrioridad" class="form-select" asp-items="Html.GetEnumSelectList<GestorTareas.Models.Prioridad>()">
                            <option value="">-- Todas las Prioridades --</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <div class="form-check form-switch pt-1">
                            <input class="form-check-input" type="checkbox" id="chkCompletadas" name="mostrarCompletadas" value="true" @(ViewBag.MostrarCompletadas == true ? "checked" : "")>
                            <label class="form-check-label" for="chkCompletadas">Mostrar Completadas</label>
                        </div>
                    </div>
                    <div class="col-md-2 text-end">
                        <button type="submit" class="btn btn-secondary w-100">Filtrar</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Prioridad</th>
                            <th>Tarea</th>
                            <th>Vencimiento</th>
                            <th>Estado</th>
                            <th class="text-end pe-4">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count == 0)
                    {
                        <tr><td colspan="5" class="text-center py-4 text-muted">No se encontraron tareas con estos filtros.</td></tr>
                    }
                    else
                    {
                        foreach (var tarea in Model)
                        {
                            // Lógica visual para Vencimiento (HU-10)
                            bool estaVencida = tarea.FechaVencimiento.HasValue && tarea.FechaVencimiento.Value.Date < DateTime.Now.Date && !tarea.EstaCompletada;
                            string claseFila = tarea.EstaCompletada ? "table-light text-muted" : "";

                        <tr class="@claseFila">
                            <td>
                                @switch (tarea.NivelPrioridad)
                                    {
                                        case GestorTareas.Models.Prioridad.Alta:
                                <span class="badge bg-danger">Alta</span>
                                            break;
                                        case GestorTareas.Models.Prioridad.Media:
                                <span class="badge bg-warning text-dark">Media</span>
                                            break;
                                        case GestorTareas.Models.Prioridad.Baja:
                                <span class="badge bg-success">Baja</span>
                                            break;
                                    }
                            </td>

                            <td>
                                <span class="fw-bold @(tarea.EstaCompletada ? "text-decoration-line-through" : "")">@tarea.Titulo</span>
                                @if (!string.IsNullOrEmpty(tarea.Descripcion))
                                    {
                                <div class="small text-muted text-truncate" style="max-width: 250px;">@tarea.Descripcion</div>
                                    }
                            </td>

                            <td>
                                @if (tarea.FechaVencimiento.HasValue)
                                    {
                                        if (estaVencida)
                                        {
                                <span class="text-danger fw-bold"><i class="bi bi-exclamation-circle"></i> @tarea.FechaVencimiento.Value.ToShortDateString()</span>
                                        }
                                        else
                                        {
                                <span>@tarea.FechaVencimiento.Value.ToShortDateString()</span>
                                        }
                                    }
                                    else
                                    {
                                <span class="text-muted small">-</span>
                                    }
                            </td>

                            <td>
                                @if(tarea.EstaCompletada)
                                    { <span class="badge rounded-pill bg-secondary">Completada</span> }
                                    else
                                    { <span class="badge rounded-pill bg-primary">Pendiente</span> }
                            </td>

                            <td class="text-end pe-3">
                                <a asp-action="Completar" asp-route-id="@tarea.Id" class="btn btn-sm btn-outline-success border-0" title="Marcar/Desmarcar">
                                    <i class="bi @(tarea.EstaCompletada ? "bi-arrow-counterclockwise" : "bi-check-circle-fill") fs-5"></i>
                                </a>

                                <a asp-action="Editar" asp-route-id="@tarea.Id" class="btn btn-sm btn-outline-warning border-0" title="Editar">
                                    <i class="bi bi-pencil-square fs-5"></i>
                                </a>

                                <a asp-action="Eliminar" asp-route-id="@tarea.Id" class="btn btn-sm btn-outline-danger border-0" onclick="return confirm('¿Borrar tarea?');" title="Eliminar">
                                    <i class="bi bi-trash fs-5"></i>
                                </a>
                            </td>
                        </tr>
                        }
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
